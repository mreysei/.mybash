#!/bin/bash

# ZSH installer and assigner
zshVersion=`zsh --version 2>&1 > /dev/null`

if [[ "$zshVersion" == *"not found"* ]]; then
  echo "Installing zsh..."
  sudo apt install zsh -y
  echo "Assign zsh by default shell..."
  chsh -s $(which zsh)
fi

# Add zshrc config to ~/.zshrc
cat ~/.mybash/templates/.zshrc >> ~/.zshrc

# Add or replace gitconfig with mybash gitconfig
cp ~/.mybash/templates/.gitconfig ~/.gitconfig