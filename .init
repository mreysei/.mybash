#!/usr/bin/env bash

export MYBASH="$HOME/.mybash"

# Include files
includeFiles() {
  for var in "$@"; do
    if [ -f $MYBASH/$var ]; then
      . $MYBASH/$var
    else
      echo "File $MYBASH/$var not found"
    fi
  done
}

includeFiles \
  zsh/configuration \
  plugins/.init \
  scripts/.init \
  aliases
