#!/bin/bash

zshVersion=`zsh --version 2>&1 > /dev/null`

# Auto installer and assigner
if [[ "$zshVersion" == *"not found"* ]]; then
  echo "Installing zsh..."
  sudo apt install zsh -y
  echo "Assign zsh by default shell..."
  chsh -s $(which zsh)
fi

initialMessage="# Oh My ZSH from MyBash"
if ! grep -q "$initialMessage" ~/.zshrc; then
  echo "$initialMessage"                      >> ~/.zshrc
  echo "if [ -f ~/.mybash/zsh/.zshrc ]; then" >> ~/.zshrc
  echo "    . ~/.mybash/zsh/.zshrc"           >> ~/.zshrc
  echo "fi"                                   >> ~/.zshrc
fi